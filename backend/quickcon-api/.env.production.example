# QuickConn Attendance - Production Environment Example
# Copy this to .env and fill in your values

# ============================================
# APPLICATION
# ============================================
APP_NAME="QuickConn Attendance"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-backend-url.onrender.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=12

# ============================================
# LOGGING (Use stderr for Render)
# ============================================
LOG_CHANNEL=stderr
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ============================================
# DATABASE (Get from PlanetScale, Railway, or Aiven)
# ============================================
DB_CONNECTION=mysql
DB_HOST=your-database-host.example.com
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# For PlanetScale, add this:
# MYSQL_ATTR_SSL_CA=/etc/ssl/certs/ca-certificates.crt

# ============================================
# SESSION (Use cookie for stateless API)
# ============================================
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=none

# ============================================
# CACHE & QUEUE (Use file for simplicity)
# ============================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
CACHE_STORE=file

# ============================================
# CORS & SANCTUM (CRITICAL - Set your frontend URL)
# ============================================
SANCTUM_STATEFUL_DOMAINS=your-frontend-url.onrender.com,localhost:3000
CORS_ALLOWED_ORIGINS=https://your-frontend-url.onrender.com,http://localhost:3000

# ============================================
# MAIL (Optional - for notifications)
# ============================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@quickconn.net"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# NETWORK ACCESS
# ============================================
ALLOW_EXTERNAL_ACCESS=true
ALLOWED_IPS=
